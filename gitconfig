[user]
  name = Xuncheng Wang
  email = w.xun.cheng@gmail.com
[push]
  default = current
[color]
  ui = true
[alias]
  aa = add --all
  st = status
  co = checkout
  br = branch
  ci = commit
  ca = commit --amend
  # Fancy logging.
  #   h  = head
  #   hp = head with patch
  #   r  = recent commits, only current branch
  #   ra = recent commits, all reachable refs
  #   l  = all commits, only current branch
  #   la = all commits, all reachable refs
  head = !git l -1
  h    = !git head
  hp   = "!. ~/.githelpers && show_git_head"
  r    = !git l -30
  ra   = !git r --all
  l    = "!. ~/.githelpers && pretty_git_log"
  la   = !git l --all
[format]
  pretty=format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset
[core]
  editor = vim
[credential]
  helper = osxkeychain
[commit]
  template = ~/.gitmessage
[mergetool]
  keepBackup = true
