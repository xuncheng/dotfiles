[user]
  name = Xuncheng Wang
  email = w.xun.cheng@gmail.com
[push]
  default = current
[color]
  ui = true
[alias]
  aa = add --all
  br = branch
  ca = commit --amend
  ci = commit --verbose
  co = checkout
  cob = checkout -b
  di = diff
  dc = diff --cached
  pullff = pull --ff-only
  st = status
  fa = fetch --all
  uncommit = reset --soft HEAD^
  unmerge = reset --hard HEAD
  unstage = reset HEAD
  # Fancy logging.
  #   h  = head
  #   hp = head with patch
  #   r  = recent commits, only current branch
  #   ra = recent commits, all reachable refs
  #   l  = all commits, only current branch
  #   la = all commits, all reachable refs
  head = !git l -1
  h    = !git head
  hp   = "!. ~/.githelpers && show_git_head"
  r    = !git l -30
  ra   = !git r --all
  l    = "!. ~/.githelpers && pretty_git_log"
  la   = !git l --all

  # Divergence (commits we added and commits remote added)
  div = divergence

  # Goodness (summary of diff lines added/removed/total)
  gn = goodness
  gnc = goodness --cached
[format]
  pretty=format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset
[core]
  editor = vim
	excludesfile = /Users/xuncheng/.gitignore_global
	quotepath = false
[credential]
  helper = osxkeychain
[commit]
  template = ~/.gitmessage
[merge]
  tool = vimdiff
[mergetool]
  keepBackup = true
[filter "media"]
  clean = git-media-clean %f
  smudge = git-media-smudge %f
[github]
  user = xuncheng
[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true
[diff]
	compactionHeuristic = true
