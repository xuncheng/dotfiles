# Unix
alias ...='cd ../..'
alias ack='ag --color-match=31'
alias ag='ag --color-match=31'
alias cls='clear'
alias killruby='killall -9 ruby'
alias ls='ls -G'
alias l='ls -lFh'
alias ll='ls -l'
alias ldot='ls -ld .*'
alias lS='ls -1FSsh'
alias lart='ls -1Fcart'
alias lrt='ls -1Fcrt'
alias mkdir='mkdir -p'
alias retag='ctags -R --exclude=.svn --exclude=.git --exclude=log --exclude=tmp *'
alias t='tail -f'
alias vi='vim'
alias so='source ~/.dotfiles/aliasrc'

# Git
alias aa='add --all'
alias br='branch'
alias ca='commit --amend'
alias ci='commit'
alias co='checkout'
alias st='status'
alias gdc='git diff --cached'
alias uncommit='reset --soft HEAD^'
alias unmerge='git reset --hard HEAD'
alias unstage='reset HEAD'

# Ruby/Rails
alias be='bundle exec'
alias fs='foreman start'
alias rc='rails console'
alias rs='bundle install && rails server -p 3000'
alias rg='rails generate'
alias rgm='rails generate migration'
alias rrg='rake routes | ack'
alias sidekiq='bundle exec sidekiq -e development -C ./config/sidekiq.yml'

alias railstips='subl ~/Dropbox/Documents/rails-tips.txt'
